@model OnlineStore.Shared.OrderDto

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white py-3 px-4 border-bottom">
                    <h4 class="mb-0 fw-bold">Shipping Information</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="PlaceOrder" method="post" id="orderForm">
                        <div class="mb-3">
                            <label asp-for="CustomerName" class="form-label fw-bold">Full Name</label>
                            <input asp-for="CustomerName" class="form-control" required placeholder="John Doe" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Shipping Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3" required placeholder="123 Main St, City, Country"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                            <input asp-for="Phone" class="form-control" required placeholder="+1 234 567 890" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <hr class="my-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100 shadow">Complete Purchase</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-light py-3 px-4 border-bottom">
                    <h5 class="mb-0 fw-bold">Order Summary</h5>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush mb-3">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-2">
                                <div>
                                    <h6 class="my-0 fw-semibold">@item.ProductName</h6>
                                    <small class="text-muted">Qty: @item.Quantity</small>
                                </div>
                                <span class="fw-bold">@((item.Price * item.Quantity).ToString("C"))</span>
                            </li>
                        }
                    </ul>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total (USD)</span>
                        <strong class="h4 text-primary">@Model.Items.Sum(i => i.Price * i.Quantity).ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
