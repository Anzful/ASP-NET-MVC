@model OnlineStore.Shared.ProductDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5 mb-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center mb-4 mb-md-0">
            <div class="bg-white p-5 rounded-4 shadow-sm">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" style="max-height: 400px; object-fit: contain;">
            </div>
        </div>
        <div class="col-md-6 ps-md-5">
            <h1 class="display-4 fw-bold mb-3">@Model.Name</h1>
            <p class="display-6 text-primary fw-bold mb-4">@Model.Price.ToString("C")</p>
            <p class="lead text-muted mb-5">@Model.Description</p>
            
            <form asp-action="AddToCart" method="post" class="card p-4 border-0 shadow-sm bg-light">
                <input type="hidden" name="productId" value="@Model.Id" />
                <input type="hidden" name="productName" value="@Model.Name" />
                <input type="hidden" name="price" value="@Model.Price" />
                
                <div class="mb-4">
                    <label for="quantity" class="form-label fw-bold text-uppercase small letter-spacing-1">Quantity</label>
                    <div class="input-group" style="max-width: 140px;">
                        <input type="number" name="quantity" id="quantity" value="1" min="1" max="100" class="form-control form-control-lg text-center fw-bold" />
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg py-3 rounded-pill fw-bold shadow-sm">
                        <i class="bi bi-cart-plus me-2"></i> Add to Cart
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-link text-decoration-none text-muted">Back to Shop</a>
                </div>
            </form>
        </div>
    </div>
</div>
